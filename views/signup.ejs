<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <form name="signup">
        <h3>회원가입</h3>
        <input type="text" id="userid" placeholder="id입력"><br>
        <input type="text" id="name" placeholder="이름 입력"><br>
        <input type="password" id="pw" placeholder="비밀번호 입력"><br>
        <button type="button" onclick="registerSuccess()">회원가입</button>
    </form>
    <script>
        function registerSuccess(){
            const form = document.forms['signup']
            axios({
                method:"POST",
                url:"/user/signup",
                data:{
                    userid:form.userid.value,
                    name:form.name.value,
                    pw:form.pw.value
                }
            }).then((res)=>{
                console.log('res',res)
                location.replace('/user/signin')
            })
        }
    </script>
</body>
</html>